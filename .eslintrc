{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/extensions": [".ts"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      },
      "node": {
        "extensions": [".ts"]
      }
    }
  },
  "env": {
    "jest": true,
    "node": true
  },
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "arrow-parens": "off",
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "indent": ["error", 2],
    "@typescript-eslint/indent": ["error", 2],
    "max-len": ["error", { "code": 80 }]
  },
  "globals": {
    "describe": true,
    "expect": true,
    "test": true,
    "it": true,
    "afterAll": true,
    "afterEach": true,
    "beforeAll": true,
    "beforeEach": true,
    "mountConnected": true,
    "jest": true
  }
}
